<div class="mb-4">
  <label for="title">Title</label>
  <input required value="<%= article.title %>" type="text" name="title" id="title"
    class="w-full opacity-50 text-black p-2">
</div>

<div class="mb-3">
  <label for="description">Description</label>
  <textarea name="description" id="description"
    class="w-full opacity-50 text-black p-2"><%= article.description %></textarea>
</div>

<div class="mb-3">
  <label for="markdown">Markdown</label>
  <textarea required name="markdown" id="markdown"
    class="w-full opacity-50 text-black p-2"><%= article.markdown %></textarea>
</div>

<div class="">
  <a href="/" class="inline-block px-3 py-1 rounded-md btn btn-secondary mr-3">Cancel</a>
  <button type="submit" class="inline-block px-3 py-1 rounded-md btn btn-info mr-3">Save</button>
</div>